{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Deno in Docker",
      "type": "node",
      "request": "attach",
      "address": "localhost",
      "port": 9229,
      "localRoot": "${workspaceFolder}/server",
      "remoteRoot": "/app/server",
      "skipFiles": ["<node_internals>/**"],
      "restart": true,
      "timeout": 30000,
      "continueOnAttach": true
    }
  ]
}